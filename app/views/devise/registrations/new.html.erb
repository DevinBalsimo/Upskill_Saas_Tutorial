<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h2>Pro Account</h2>
          <p>Sign up for the Pro account for $10 per month and get access to all the features!</p>
        <% else %>
          <h2>Basic Account</h2>
          <p>Don't worry, you can always upgrade your account later</p>
        <% end %>
      </div>
      
      <div class="well">
        <% if params[:plan] == '2' %>
          <!-- the following line of code injects the html from _pro_form.html.erb -->
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>